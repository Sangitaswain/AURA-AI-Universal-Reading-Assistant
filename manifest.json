{
  "manifest_version": 3,
  "name": "AURA - AI Universal Reading Assistant",
  "version": "1.0.0",
  "description": "Understand the web your way â€” summarize, simplify, translate, and listen, powered by Gemini Nano.",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AURA - AI Universal Reading Assistant",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.css"],
      "matches": ["<all_urls>"]
    }
  ]
}